/* Product Swiper */
.product-swiper {
  width: 100%;
  height: 750rpx;
}

.product-image {
  width: 100%;
  height: 100%;
}

/* Product Info */
.product-info {
  margin: 20rpx;
  padding: 30rpx;
}

.product-price-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.original-price {
  color: var(--text-color-light);
  text-decoration: line-through;
  font-size: 28rpx;
  margin-left: 16rpx;
}

.product-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.product-meta {
  display: flex;
  gap: 20rpx;
  color: var(--text-color-light);
  font-size: 24rpx;
}

/* Specifications */
.spec-section {
  margin: 20rpx;
  padding: 30rpx;
}

.spec-content {
  margin-top: 20rpx;
}

.spec-item {
  margin-bottom: 24rpx;
}

.spec-name {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 16rpx;
  display: block;
}

.spec-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.spec-option {
  padding: 12rpx 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 26rpx;
  color: var(--text-color);
}

.spec-option.selected {
  border-color: var(--primary-color);
  color: var(--primary-color);
  background: rgba(18, 150, 219, 0.1);
}

/* Tabs */
.tabs {
  display: flex;
  margin: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: var(--text-color);
  background: #fff;
  position: relative;
}

.tab.active {
  color: var(--primary-color);
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: var(--primary-color);
  border-radius: 2rpx;
}

/* Tab Content */
.tab-content {
  margin: 20rpx;
  padding: 30rpx;
  min-height: 400rpx;
}

.description {
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-color);
  margin-bottom: 30rpx;
}

.features {
  margin-top: 20rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.feature-dot {
  margin-right: 12rpx;
  color: var(--primary-color);
}

/* Reviews */
.review-item {
  padding: 20rpx 0;
  border-bottom: 2rpx solid var(--border-color);
}

.review-item:last-child {
  border-bottom: none;
}

.review-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.review-user {
  font-size: 28rpx;
  font-weight: 500;
}

.review-rating {
  color: #ffb800;
}

.review-content {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.review-images {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.review-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.review-date {
  font-size: 24rpx;
  color: var(--text-color-light);
}

/* Action Bar */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.quantity-control {
  display: flex;
  align-items: center;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: var(--text-color);
  background: #fff;
}

.quantity-input {
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  border-left: 2rpx solid var(--border-color);
  border-right: 2rpx solid var(--border-color);
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-buttons button {
  margin: 0;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

/* Popup */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.popup-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
  transform: translateY(0);
  transition: transform 0.3s ease-out;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
}

.popup-close {
  font-size: 40rpx;
  color: var(--text-color-light);
  padding: 10rpx;
}

.popup-body {
  margin-bottom: 30rpx;
}

.popup-footer {
  display: flex;
  gap: 20rpx;
}

.popup-footer button {
  flex: 1;
  margin: 0;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

/* Loading */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
} 