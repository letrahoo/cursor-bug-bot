<view class="product-card" bindtap="onTap">
  <!-- 商品图片 -->
  <view class="product-image">
    <image src="{{product.image}}" mode="aspectFill" lazy-load></image>
    <!-- 商品标签 -->
    <view class="product-tags" wx:if="{{showTags && product.tags.length > 0}}">
      <text class="tag" wx:for="{{product.tags}}" wx:key="*this">{{item}}</text>
    </view>
  </view>

  <!-- 商品信息 -->
  <view class="product-info">
    <view class="product-name">{{product.name}}</view>
    
    <!-- 价格信息 -->
    <view class="price-section">
      <view class="price-info">
        <text class="current-price">¥{{product.price}}</text>
        <text class="original-price" wx:if="{{product.originalPrice}}">¥{{product.originalPrice}}</text>
      </view>
      <view class="sales-info" wx:if="{{product.sales}}">
        已售 {{product.sales}}
      </view>
    </view>

    <!-- 加入购物车按钮 -->
    <view class="action-section">
      <button class="add-to-cart" catchtap="onAddToCart">
        <text class="icon">+</text>
        <text>加入购物车</text>
      </button>
    </view>
  </view>
</view> 