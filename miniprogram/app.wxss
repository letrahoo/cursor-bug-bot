/**app.wxss**/
page {
  --primary-color: #1296db;
  --secondary-color: #f8f8f8;
  --text-color: #333333;
  --text-color-light: #999999;
  --border-color: #eeeeee;
  
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-color);
  background: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-around {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.text-primary {
  color: var(--primary-color);
}

.text-light {
  color: var(--text-color-light);
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.btn-primary {
  background: var(--primary-color);
  color: #ffffff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
}

.btn-outline {
  background: #ffffff;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
}

.card {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.price {
  color: #ff4d4f;
  font-weight: bold;
}

.price::before {
  content: 'Â¥';
  font-size: 0.8em;
}

.tag {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.tag-primary {
  background: rgba(18, 150, 219, 0.1);
  color: var(--primary-color);
}

.tag-success {
  background: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.tag-warning {
  background: rgba(250, 173, 20, 0.1);
  color: #faad14;
}

.tag-error {
  background: rgba(255, 77, 79, 0.1);
  color: #ff4d4f;
} 